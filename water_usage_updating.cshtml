@page
@model SmartWaterApp.Pages.UpdateModel
@{
}

<head>
    <title>Update Water Usage</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css">

</head>
<body>
    <h2>Update Water Usage</h2>
    <form method="POST">
        <label for="activity">Activity</label>
        <select id="activity" name="activity">
            <option value="showering">Showering</option>
            <option value="washing_dishes">Washing Dishes</option>
            <option value="laundry">Laundry</option>
            <option value="cooking">Cooking</option>
            <option value="gardening">Outdoor Watering</option>
        </select>
        <label for="current_water_consumed">Current Water Consumed (liters)</label>
        <input type="number" id="current_water_consumed" name="current_water_consumed" required>
        <label for="new_water_consumed">New Water Consumed (liters)</label>
        <input type="number" id="new_water_consumed" name="new_water_consumed" required>
        <button type="submit" class="btn btn-warning">Update</button>
    </form>
</body>
