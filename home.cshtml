@page
@model SmartWaterApp.Pages.loginModel
@{
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SmartWater - Main Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        .hero {
            background: url('https://source.unsplash.com/1600x900/?water,conservation') no-repeat center center/cover;
            height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }

        .btn {
            font-size: 1.2rem;
        }

        .progress-bar {
            background-color: #17a2b8;
        }

        footer {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero text-center">
        <div>
            <h1>Welcome to SmartWater</h1>
            <p>Your Companion for Sustainable Water Management</p>
            <a href="@Url.Page("/dashboard")" class="btn btn-primary btn-lg">Get Started</a>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="container mt-5" id="quick-actions">
        <h2 class="text-center mb-4">Quick Actions</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <a href="@Url.Page("/water_usage_logging")">
                    <div class="card shadow">
                        <div class="card-body p-3">
                            <button class="btn btn-primary w-100">Log Water Usage</button>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Page("/dashboard")">
                    <div class="card shadow">
                        <div class="card-body">
                            <button class="btn btn-success w-100">View Dashboard</button>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Page("/goal_settings")">
                    <div class="card shadow">
                        <div class="card-body">
                            <button class="btn btn-warning w-100">Set Goals</button>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Current Progress Overview -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Today's Water Usage</h2>
        <div class="progress mx-auto" style="width: 80%;">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
        </div>
    </div>

    <!-- Tip of the Day -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Tip of the Day</h2>
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title">Save Water with Small Changes</h5>
                <p class="card-text">Use a bucket instead of a hose for car washing to save up to 50 liters of water.</p>
            </div>
        </div>
    </div>
    <br></br>
</body>
