@page
@model SmartWaterApp.Pages.water_usage_loggingModel
@{
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log Water Usage - Water Usage Tracker</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css">
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid justify-content-center">
            <!-- Added justify-content-center -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Removed ms-auto to center the items -->
                    <li class="nav-item"><a class="nav-link" href="@Url.Page("/home")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Page("/water_usage_logging")">Water Usage</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Page("/dashboard")">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Page("/goal_settings")">Goals</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Page("/tips")">Tips</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Page("/profile_management")">Profile</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <br>
    <br>
    <br></br>
    <div class="water-usage-container">
        <h2>Log Your Water Usage</h2>
        <form  method="POST">
            <label for="activity">Activity</label>
            <select id="activity" name="activity">
                <option value="showering">Showering</option>
                <option value="washing_dishes">Washing Dishes</option>
                <option value="laundry">Laundry</option>
                <option value="cooking">Cooking</option>
                <option value="gardening">Outdoor Watering</option>
            </select>
            <label for="water_consumed">Water Consumed (liters)</label>
            <input type="number" id="water_consumed" name="water_consumed" required>
            <br/>
            
            <button type="submit">Log Usage</button>
        </form>
    </div>

</body>

